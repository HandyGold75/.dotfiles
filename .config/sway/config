# https://github.com/swaywm/sway/wiki

set $mod Mod4
set $terminal kitty
set $fileManager thunar
set $menu wofi
# set $lock pidof hyprlock || hyprlock
set $clip = wl-copy
set $clipboard cliphist list | wofi --dmenu | cliphist decode | $clip
# set $screenshot_clipboard hyprshot --mode region --freeze --clipboard-only
# set $screenshot hyprshot --mode region --freeze
set $screenshot flameshot gui
# set $sysinfo hyprsysteminfo

#   _____       _               _
#  |  _  |     | |             | |
#  | | | |_   _| |_ _ __  _   _| |_
#  | | | | | | | __| '_ \| | | | __|
#  \ \_/ / |_| | |_| |_) | |_| | |_
#   \___/ \__,_|\__| .__/ \__,_|\__|
#                  | |
#                  |_|

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

#   _____    _ _
#  |_   _|  | | |
#    | |  __| | | ___
#    | | / _` | |/ _ \
#   _| || (_| | |  __/
#   \___/\__,_|_|\___|
#
#

exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

#   _____                  _
#  |_   _|                | |
#    | | _ __  _ __  _   _| |_
