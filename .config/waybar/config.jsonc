{
  "layer": "top",
  "height": 30,
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["group/power", "hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": [
    "custom/playerctl",
    "mpris",
    "pulseaudio",
    "network",
    "keyboard-state",
    "cpu",
    "memory",
    "temperature",
    "battery",
    "backlight",
    "group/disks",
    "tray",
  ],
  "hyprland/workspaces": {
    "format": "{icon} {id}",
    "format-icons": {
      // "1": "",
      // "2": "",
      // "3": "",
      // "4": "",
      // "5": "",
      "active": "",
      "default": "",
      "empty": "",
      "persistent": "",
      "special": "",
      "urgent": "",
    },
    "show-special": true,
    "sort-by": "id",

    "persistent-workspaces": {
      "*": 3,
    },

    "disable-scroll": false,
    "warp-on-scroll": false,
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
  },

  // "hyprland/window": {
  //   "max-length": 200,
  //   "separate-outputs": true,
  // },

  "backlight": {
    // "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""],
  },

  "battery": {
    // "bat": "BAT0",
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-time": "{H}:{M}",
    "format-alt": "{time} {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-icons": ["", "", "", "", ""],
  },

  "cpu": {
    "interval": 3,
    "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11} {usage}% ",
    "format-icons": [
      "<span color='#69ff94'>▁</span>",
      "<span color='#2aa9ff'>▂</span>",
      "<span color='#f8f8f2'>▃</span>",
      "<span color='#f8f8f2'>▄</span>",
      "<span color='#ffffa5'>▅</span>",
      "<span color='#ffffa5'>▆</span>",
      "<span color='#ff9977'>▇</span>",
      "<span color='#dd532e'>█</span>",
    ],
    "on-click": "terminator -e btop",
  },

  "clock": {
    "format": "{:%d-%b-%y %H:%M} ",
    "tooltip": true,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  "group/disks": {
    "orientation": "inherit",
    "modules": ["disk", "disk#nvme1", "disk#hdd1"],
    "drawer": {
      "transition-duration": 500,
      "children-class": "not-disks",
      "transition-left-to-right": false,
    },
  },
  "disk": {
    "interval": 30,
    "format": "{percentage_used}% ",
    "path": "/",
    "on-click": "terminator -e btop",
    "tooltip": true,
    "tooltip-format": "{used}/{total} {path}",
  },
  "disk#nvme1": {
    "interval": 30,
    "format": "{percentage_used}% ",
    "path": "/mnt/nvme1",
    "on-click": "terminator -e btop",
    "tooltip": true,
    "tooltip-format": "{used}/{total} {path}",
  },
  "disk#hdd1": {
    "interval": 30,
    "format": "{percentage_used}% ",
    "path": "/mnt/hdd1",
    "on-click": "terminator -e btop",
    "tooltip": true,
    "tooltip-format": "{used}/{total} {path}",
  },

  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "",
      "unlocked": "",
    },
  },

  "mpris": {
    "format": "{player_icon} {player} {status} {dynamic}",
    "player-icons": {
      "default": "",
    },
    "status-icons": {
      "playing": "",
      "paused": "",
      "paused": "",
    },
    "max-length": 20,
    "on-click": "/usr/bin/playerctl play-pause",
    "on-click-middle": "/usr/bin/playerctl previous",
    "on-click-right": "/usr/bin/playerctl next",
  },

  "memory": {
    "format": "{percentage}% ",
    "on-click": "terminator -e btop",
    "tooltip": true,
    "tooltip-format": "{used:0.1f}G/{total:0.1f}G \n{swapUsed:0.1f}G/{swapTotal:0.1f}G ",
  },

  "network": {
    "format": "{bandwidthUpBytes/1024/1024}MBps  {bandwidthDownBytes/1024/1024}MBps  ",
    "format-wifi": "{bandwidthUpBytes/1024/1024}MBps  {bandwidthDownBytes/1024/1024}MBps  ",
    "format-ethernet": "{bandwidthUpBytes/1024/1024}MBps  {bandwidthDownBytes/1024/1024}MBps  ",
    "format-linked": "{bandwidthUpBytes/1024/1024}MBps  {bandwidthDownBytes/1024/1024}MBps  ",
    "format-disconnected": "{bandwidthUpBytes/1024/1024}MBps  {bandwidthDownBytes/1024/1024}MBps  ⚠",

    "tooltip-format": "{ifname} via {gwaddr} ",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    "tooltip-format-ethernet": "{ipaddr}/{cidr} ",
    "tooltip-format-disconnected": "{ifname} (No IP) ",
  },

  // ---------------------------------------------------

  "tray": {
    // "icon-size": 21,
    "spacing": 10,
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}°C {icon}",
    "format": "{temperatureC}°C {icon}",
    "format-icons": ["", "", ""],
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""],
    },
    "on-click": "pavucontrol",
  },

  "group/power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "grouppower",
      "transition-left-to-right": true,
    },
    "modules": [
      "custom/arch",
      "custom/power",
      "custom/quit",
      "custom/lock",
      "custom/reboot",
    ],
  },
  "custom/arch": {
    // "format": "󰣇",
    "format": "",
    "on-click": "wofi --show drun",
    "tooltip": false,
  },
  "custom/power": {
    "format": "",
    "tooltip": false,
    "on-click": "shutdown now",
  },
  "custom/quit": {
    "format": "",
    "tooltip": false,
    "on-click": "hyprctl dispatch exit",
  },
  "custom/lock": {
    "format": "󰍁",
    "tooltip": false,
    "on-click": "pidof hyprlock || hyprlock",
  },
  "custom/reboot": {
    "format": "",
    "tooltip": false,
    "on-click": "reboot",
  },

  "custom/playerctl": {
    "exec": "/usr/bin/playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "format": "{icon}<span background='#3c3836' foreground='#b16286'> {} </span>",
    "format-icons": {
      "Paused": "<span background='#d3869b' foreground='#1d2021'>  </span>",
      "Playing": "<span background='#d3869b' foreground='#1d2021'>  </span>",
    },
    "max-length": 20,
    "on-click": "/usr/bin/playerctl play-pause",
    "on-click-middle": "/usr/bin/playerctl previous",
    "on-click-right": "/usr/bin/playerctl next",
    "return-type": "json",
  },
}
